{
  "name": "4scotty_coding_challenge",
  "version": "0.0.1",
  "author": "Pierre Gendre",
  "description": "Coding challenge for 4scotty interview.",
  "main": "webpack/shared.js",
  "scripts": {
    "start:dev": "npm run linter && node server.js ",
    "build:staging": "export LOCALE=$LOCALE; npm run clean:staging; npm run sass && npm run chunkcss && npm run locale && npm run webpack",
    "build:prod": "export LOCALE=$LOCALE; npm run clean:prod; npm run sass:prod && npm run chunkcss && npm run locale && npm run webpack",
    "deploy:staging": "./node_modules/.bin/shipit staging deploy",
    "deploy:prod": "./node_modules/.bin/shipit production deploy",
    "rollback:staging": "./node_modules/.bin/shipit staging rollback",
    "rollback:prod": "./node_modules/.bin/shipit production rollback",
    "clean:staging": "rm -r ./dist/staging/static/js/* ; rm ./dist/staging/static/css/* ; rm ./dist/staging/*.html",
    "clean:prod": "rm -r ./dist/production/static/js/* ; rm ./dist/production/static/css/* ; rm ./dist/production/*.html",
    "webpack": "webpack --config ./webpack/conf.build.js --progress --profile --colors",
    "locale": "export LOCALE=$LOCALE; node ./scripts/locale.js",
    "sass:dev": "export NODE_ENV=development && node scripts/build.sass.js",
    "sass:prod": "export NODE_ENV=production && node scripts/build.sass.js",
    "chunkcss": "node scripts/chunk.css.js",
    "linter": "npm run prettier && npm run eslint",
    "prettier": "./node_modules/.bin/prettier --write src/js/**/*.js src/js/**/**/*.js",
    "eslint": "./node_modules/.bin/eslint src/js/**/*.js src/js/**/**/*.js",
    "test": "jest"
  },
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-core": "^6.7.6",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-webpack-loaders": "^0.4.0",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^1.0.8",
    "css-loader": "^0.23.1",
    "dotenv": "^6.2.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-prettier": "^2.5.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-include-assets-plugin": "^1.0.4",
    "html-webpack-plugin": "^2.17.0",
    "html-webpack-template": "^6.1.0",
    "jest": "^22.4.2",
    "json-loader": "^0.5.4",
    "koa": "^2.4.1",
    "koa-static": "^4.0.2",
    "koa-webpack-dev-middleware": "^2.0.2",
    "koa-webpack-hot-middleware": "^1.0.3",
    "node-sass": "^4.11.0",
    "postcss-loader": "^0.9.1",
    "prettier": "^1.10.2",
    "rev-hash": "^2.0.0",
    "rimraf": "^2.5.2",
    "shipit-cli": "^4.0.2",
    "shipit-deploy": "^4.0.2",
    "stats-webpack-plugin": "^0.3.1",
    "style-loader": "^0.13.1",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-cli": "^2.0.13",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^3.1.1",
    "webpack-hot-middleware": "^2.10.0",
    "webpack-manifest-plugin": "^1.3.2"
  },
  "peerDependencies": {
    "i18next": "^4.2.0"
  },
  "dependencies": {
  },
  "jest": {
    "moduleNameMapper": {
      "^Js(.*)$": "<rootDir>/src/js$1"
    },
    "verbose": true,
    "testURL": "http://localhost/"
  }
}
